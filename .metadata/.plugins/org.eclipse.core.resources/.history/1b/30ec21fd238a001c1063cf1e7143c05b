package ncs.IOPractice;


import java.io.*;

//Serialization Process

class FootBaller implements Serializable
{
	String name;
	int age;
	int noOfGoals;
	
	FootBaller(String name, int age, int noOfGoals)
	{
		this.name = name;
		this.age=age;
		this.noOfGoals = noOfGoals;
	}
	
	public String toString()
	{
		return name+" "+age+" "+noOfGoals;
	}
}


public class Serialization {

	public static void main(String[] args) throws Exception {
		FootBaller fb1 = new FootBaller("Tommy", 25, 10);
		
		String path ="D://NCS//footballer.txt";
		
		FileOutputStream fos = new FileOutputStream(path);
		ObjectOutputStream oos = new ObjectOutputStream(fos);
		
		oos.writeObject(fb1);
		System.out.println("Object stored in harddisk");

	}

}
